<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_show_shadow_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/bg_shadow_up" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="338dp">

        <ImageView
            android:id="@+id/iv_card_show_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/bg_card_big_level_1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.app.pao.ui.widget.CircularImage
                        android:layout_width="82dp"
                        android:layout_height="82dp"
                        android:src="@android:color/white" />

                    <com.app.pao.ui.widget.CircularImage
                        android:id="@+id/iv_user_photo"
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:layout_gravity="center" />
                </FrameLayout>


                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@id/tv_total_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="42dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="总里程(公里)"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tv_card_name_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月球"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_card_km_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="200公里"
                    android:textColor="@color/white"
                    android:textSize="14dp" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_card_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="131/300"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="公里"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:id="@+id/ll_pb_bg"-->
                <!--android:layout_width="6dp"-->
                <!--android:gravity="bottom|center_horizontal"-->
                <!--android:background="@drawable/bg_progressbar_v"-->
                <!--android:layout_marginStart="11dp"-->
                <!--android:layout_marginEnd="13dp"-->
                <!--android:layout_height="284dp">-->
                <!--<ImageView-->
                <!--android:id="@+id/ll_pb_progress"-->
                <!--android:layout_width="4dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scaleType="fitXY"-->
                <!--android:src="@drawable/progress_progressbar1_v"-->
                <!--android:layout_marginBottom="2dp"-->
                <!--android:layout_marginTop="2dp"-->
                <!--/>-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:id="@+id/pb_km_bg"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="9dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginStart="11dp"
                    android:background="@drawable/progress_bg_user_level"
                    android:gravity="center_horizontal">

                    <View
                        android:id="@+id/pb_km_progress"
                        android:layout_width="4dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/progress_pro_user_level" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_show_shadow_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/bg_shadow_down" />

</LinearLayout>