<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充的颜色 -->
    <solid android:color="#f06522" />
    <!-- 设置矩形的四个角为弧形 -->
    <corners
        android:bottomRightRadius="4dp" />
    <gradient
        android:angle="270"
        android:endColor="#f06522"
        android:startColor="#f06522" />

    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"/>

</shape>