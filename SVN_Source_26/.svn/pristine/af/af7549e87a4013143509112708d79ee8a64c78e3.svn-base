<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/ListViewItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="65dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- com.app.pao.ui.widget.CircularImage -->


        <com.app.pao.ui.widget.CircularImage
            android:id="@+id/iv_search_friends_photo"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_friends_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="14dp"/>

                <ImageView
                    android:id="@+id/iv_gander"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <com.rey.material.widget.TextView
                android:id="@+id/tv_freinds_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#888888"
                android:textSize="12dp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="68dp"
            android:layout_height="30dp">

            <com.rey.material.widget.Button
                android:id="@+id/btn_agree"
                style="@style/ButtonBase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_splash"
                android:text="@string/Btn.AddFriend"
                android:textColor="#f06522"/>

            <com.rey.material.widget.TextView
                android:id="@+id/tv_friend_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/Tv.ApplyFriednList.HasAdd"
                android:textColor="#bbbbbb"
                android:textSize="12dp"/>
        </FrameLayout>

    </LinearLayout>

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent"/>

</LinearLayout>