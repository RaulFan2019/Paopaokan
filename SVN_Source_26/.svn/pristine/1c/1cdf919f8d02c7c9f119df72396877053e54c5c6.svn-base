<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/RecyclerView_CardView"
    android:layout_height="54dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/cardView_horizontal_padding"
        android:paddingRight="@dimen/cardView_horizontal_padding">

        <ImageView
            android:id="@+id/iv_is_read"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/icon_meessage_has_read"/>

        <com.rey.material.widget.TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:textColor="#222222"
            android:textSize="14sp"/>

        <com.rey.material.widget.TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginStart="10dp"
            android:textColor="#888888"
            android:textSize="12sp"
            />    </LinearLayout>

</android.support.v7.widget.CardView>