<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/ListViewItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="66dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- com.app.pao.ui.widget.CircularImage -->

        <com.app.pao.ui.widget.CircularImage
            android:id="@+id/iv_friends_photo"
            android:layout_width="38dp"
            android:layout_height="38dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_friends_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    />

                <ImageView
                    android:id="@+id/iv_gander"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tv.FriendListActivity.Length"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    />

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="68dp"
            android:layout_height="30dp">

            <Button
                android:id="@+id/btn_agree"
                style="@style/ButtonBase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_splash"
                android:text="@string/Btn.Agree"
                android:textColor="#f06522"/>

            <com.rey.material.widget.TextView
                android:id="@+id/tv_has_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/Tv.ApplyFriednList.HasAdd"
                android:textColor="#bbbbbb"
                android:textSize="12sp"/>
        </FrameLayout>
    </LinearLayout>

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent"/>

</LinearLayout>