<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fl_splash"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_marginBottom="110dp">

        <TextView
            android:id="@+id/tv_splash_title"
            style="@style/TextViewSplashTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Tv.SplashActivity.fragment.three.title"
            />

        <TextView
            android:id="@+id/tv_splash_explain"
            style="@style/TextViewSplashExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/Tv.SplashActivity.fragment.three.explain"/>
    </LinearLayout>
</FrameLayout>