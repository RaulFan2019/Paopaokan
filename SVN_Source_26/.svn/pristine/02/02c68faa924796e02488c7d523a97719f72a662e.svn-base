<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/LinearlayoutBase">
    <LinearLayout
        android:id="@+id/ll_first_member"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_first_is_own"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_me_selected"/>

            <TextView
                android:id="@+id/tv_first_member_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="12sp"/>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl_first_member_pb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/pb_first_member_show"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:progress="100"
                android:progressDrawable="@drawable/progress_group_common_horizontal"/>

            <com.app.pao.ui.widget.CircularImage
                android:id="@+id/ci_first_member_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_first_member_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Tv.GroupInfo.Unit.Km"
                android:textColor="@color/grey_dark"
                android:singleLine="true"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_second_member"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_second_is_own"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_me_selected"/>

            <TextView
                android:id="@+id/tv_second_member_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="12sp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_second_member_pb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/pb_second_member_show"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:progress="50"
                android:progressDrawable="@drawable/progress_group_common_horizontal"/>

            <com.app.pao.ui.widget.CircularImage
                android:id="@+id/ci_second_member_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_second_member_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Tv.GroupInfo.Unit.Km"
                android:singleLine="true"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_thirdly_member"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">
            <ImageView
                android:id="@+id/iv_thirdly_is_own"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_me_selected"/>
            <TextView
                android:id="@+id/tv_thirdly_member_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="12sp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_thirdly_member_pb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/pb_thirdly_member_show"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:progress="20"
                android:progressDrawable="@drawable/progress_group_common_horizontal"/>

            <com.app.pao.ui.widget.CircularImage
                android:id="@+id/ci_thirdly_member_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_thirdly_member_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Tv.GroupInfo.Unit.Km"
                android:singleLine="true"
                android:textColor="@color/grey_dark"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_rank_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="还没人抢占第X名，赶紧！"
        android:textSize="12sp"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/bg_round_rect_grey_dark"
        android:layout_marginTop="18dp">
        <TextView
            android:id="@+id/btn_member_ranking"
            style="@style/ButtonBase_commit"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="?android:attr/selectableItemBackground"
            android:drawableEnd="@drawable/icon_right_arrow"
            android:paddingEnd="8dp"
            android:textColor="@color/grey_dark"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tv_member_ranking"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center_vertical|center_horizontal"/>
    </FrameLayout>

</LinearLayout>