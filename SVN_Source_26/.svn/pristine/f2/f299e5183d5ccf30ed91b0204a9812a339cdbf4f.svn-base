<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_party_start"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/icon_party_start"/>
        <View
            android:id="@+id/line_party_start"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#f06522"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.rey.material.widget.TextView
            android:id="@+id/tv_party_start"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:text="@string/Tv.PartyInfo.Start"
            android:textColor="#f06522"
            android:textSize="12sp"/>
        <LinearLayout
            android:id="@+id/btn_checkin"
            style="@style/ButtonBase_commit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icon_btn_party_check"/>
            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Btn.PartyInfo.Plan.Checkin"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
    </LinearLayout>

</LinearLayout>