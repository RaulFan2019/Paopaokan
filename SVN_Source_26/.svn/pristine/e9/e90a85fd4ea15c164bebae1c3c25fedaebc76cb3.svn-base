<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/ListViewItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    >
    <!-- time title -->
    <LinearLayout
        style="@style/ListViewItem"
        android:layout_height="5dp"
        android:orientation="horizontal">
    </LinearLayout>
    <!-- 内容 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:minHeight="128dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <com.rey.material.widget.TextView
                    android:id="@+id/tv_party_name"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_party_person_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f06522"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/DividerBase_horizontal"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_party_location"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_party_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="14dp"
                    android:background="@drawable/icon_party_time"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_party_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/ListViewItem"
        android:layout_height="5dp"
        android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>