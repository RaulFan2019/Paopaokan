<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f7f7f7"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/tv_user_rank_time"
                style="@style/LineViewBase_Key_Tip"
                android:text="您本周在" />

            <TextView
                android:id="@+id/tv_user_rank_totle_people"
                style="@style/LineViewBase_Key_Tip"
                android:text="46" />

            <TextView
                android:id="@+id/tv_friend_type"
                style="@style/LineViewBase_Key_Tip"
                android:text="名好友中排名第" />

            <TextView
                android:id="@+id/tv_user_rank"
                style="@style/LineViewBase_Key_Tip"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textSize="14dp" />

            <TextView
                style="@style/LineViewBase_Key_Tip"
                android:text="名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:gravity="right|center_vertical">

            <LinearLayout
                android:id="@+id/ll_set_rank_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rank_type"
                    style="@style/LineViewBase_Key_Tip"
                    android:text="本周" />

                <ImageView
                    android:id="@+id/iv_up_or_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/icon_down" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent" />

    <FrameLayout
        android:id="@+id/fl_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_fragment_contaner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

        <LinearLayout
            android:id="@+id/ll_rank_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_week_rank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="本周"
                    android:textColor="@color/grey" />

                <View
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:background="#dddddd" />

                <TextView
                    android:id="@+id/tv_month_rank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="本月"
                    android:textColor="@color/grey" />

                <View
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:background="#dddddd" />

                <TextView
                    android:id="@+id/tv_total_rank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="总计"
                    android:textColor="@color/grey" />
            </LinearLayout>

            <View
                style="@style/DividerBase_horizontal"
                android:layout_width="match_parent" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>