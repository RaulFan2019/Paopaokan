<resources>

    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorSwitchThumbNormal">@color/colorSwitchThumbNormal</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme.full" parent="Theme.AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--//1、设置背景图Theme-->
    <style name="Theme.AppStartLoad" parent="Theme.AppTheme">
        <item name="android:windowBackground">@drawable/bg_app_start</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">#333333</item>
    </style>

    <!--//2、设置透明Theme-->
    <style name="Theme.AppStartLoadTranslucent" parent="Theme.AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <!-- Base LinearLayout -->
    <style name="LinearlayoutBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/Base.LinearLayout</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="LineViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/line_left_margin</item>
        <item name="android:paddingRight">@dimen/line_right_margin</item>
    </style>


    <!-- Base FramLayout -->
    <style name="FrameLayoutBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- BaseEditText -->
    <style name="EditTextBase" parent="Material.Widget.EditText.Light">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
        <item name="android:textColorHint">@color/abc_secondary_text_material_light</item>
        <item name="et_dividerColor">@drawable/et_color_divider</item>
        <item name="et_labelTextColor">@drawable/et_color_label</item>
        <item name="et_supportTextErrorColor">#FFFF0000</item>
        <item name="et_dividerErrorColor">#FFFF0000</item>
    </style>

    <!-- Button -->
    <style name="ButtonBase" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@drawable/bg_bt_raise</item>
        <item name="rd_leftPadding">1dp</item>
        <item name="rd_topPadding">1dp</item>
        <item name="rd_rightPadding">1dp</item>
        <item name="rd_bottomPadding">2dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
    </style>

    <style name="FlatButtonBase" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@null</item>
        <item name="rd_rippleColor">@color/colorPrimaryHalf</item>
        <item name="rd_cornerRadius">4dp</item>
        <item name="rd_delayClick">none</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LightSpinnerItem" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">@color/colorPrimary</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
        <item name="rd_delayClick">afterRelease</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
    </style>

    <style name="LightSpinner" parent="Material.Widget.Spinner.Light">
        <item name="rd_style">@style/Material.Drawable.Ripple.Wave.Light</item>
        <item name="spn_labelEnable">true</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="spn_arrowColor">@color/colorControlNormal</item>
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
    </style>

    <!-- Base Progress-->
    <style name="CircularProgressViewBase">
        <item name="pv_autostart">false</item>
        <item name="pv_circular">true</item>
        <item name="pv_progressStyle">@style/LightCircularProgressDrawable</item>
        <item name="pv_progressMode">indeterminate</item>
    </style>

    <style name="LightCircularProgressDrawable" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/colorPrimary</item>
    </style>

    <style name="DarkCircularProgressDrawable" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/colorAccent</item>
        <item name="cpd_reverse">true</item>
    </style>

    <!-- TextView  -->
    <style name="LineViewBase_LittleTip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>

    <style name="LineViewBase_Value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="LineViewBase_LeftTv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="LineViewBase_RightTv">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="LineViewBase_UserSetting_RightTv" parent="LineViewBase_RightTv">
        <item name="android:textColor">#666666</item>
    </style>

    <!-- 个人最佳使用 -->
    <style name="LineViewBase_RightTv_Best">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#888888</item>
    </style>

    <style name="LineViewBase_RightLl">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="LineViewBase_LeftLl">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="LineViewBase_Key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222222</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="LineViewBase_Key2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="LineViewBase_Key1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#222222</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="LineViewBase_Key_Tip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#888888</item>
    </style>
    <!-- ImageView -->
    <style name="LineViewBase_RightArrow">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:background">@drawable/icon_right_arrow_big</item>
    </style>

    <!-- ImageView -->
    <style name="LineViewBase_LeftMedal">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:background">@drawable/icon_big_no</item>
    </style>

    <!-- ImageView -->
    <style name="LineViewBase_RightMedal">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="LineViewBase_RightArrow_small">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:background">@drawable/icon_right_arrow_big</item>
    </style>

    <style name="LineViewBase_RightArrow_big">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:background">@drawable/icon_right_arrow_big</item>
    </style>


    <!-- listView -->
    <style name="ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>


    <!-- RecyclerView -->
    <style name="RecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RecyclerView_CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/cardView_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/cardView_horizontal_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>
