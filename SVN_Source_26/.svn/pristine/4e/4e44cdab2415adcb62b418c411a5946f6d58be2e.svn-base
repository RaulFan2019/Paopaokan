<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/ListViewItem"
    android:id="@+id/ll_base"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="68dp"
    android:minHeight="68dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/line_left_margin"
    android:paddingEnd="@dimen/line_right_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_dynamic_map"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="10dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:background="@drawable/icon_party_length"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_length"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#222222"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="10dp"
                    android:background="@drawable/icon_dynamic_pace"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_pace"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#222222"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="14dp"
                    android:background="@drawable/icon_party_time"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#222222"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_time"
                    android:paddingStart="10dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:text="#888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_uploading"
                    android:layout_marginLeft="10dp"
                    android:layout_width="12dp"
                    android:layout_height="13dp"
                    android:background="@drawable/icon_uploading_small"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/iv_has_video"
            android:layout_width="22dp"
            android:layout_height="15dp"
            android:background="@drawable/icon_has_video"
            android:visibility="invisible"/>
    </LinearLayout>

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent"/>
</LinearLayout>