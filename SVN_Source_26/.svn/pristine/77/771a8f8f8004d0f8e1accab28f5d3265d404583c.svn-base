<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearlayouttitleV1">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <com.rey.material.widget.TabPageIndicator
            android:id="@+id/tbi_friend"
            style="@style/GroupTabPageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:orientation="horizontal">

        <com.rey.material.widget.ImageButton
            android:id="@+id/btn_apply_friend"
            style="@style/MenuRightButton"
            android:src="@drawable/icon_friend_apply" />

        <com.rey.material.widget.ImageButton
            android:id="@+id/btn_add_friend"
            style="@style/MenuRightButton"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_friend_menu" />


    </LinearLayout>

</LinearLayout>