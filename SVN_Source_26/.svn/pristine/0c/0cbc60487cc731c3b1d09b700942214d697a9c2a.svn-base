<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        style="@style/ListViewItem"
        android:id="@+id/ll_base"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#ffffff">

        <com.app.pao.ui.widget.CircularImage
            android:id="@+id/ci_user_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.rey.material.widget.TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/grey"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp">

                    <ImageView
                        android:id="@+id/iv_user_gender"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dp">
                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_user_location_province"
                        style="@style/LineViewBase_Key_Tip"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dp">
                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_user_location_city"
                        style="@style/LineViewBase_Key_Tip"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <com.rey.material.widget.TextView
            android:id="@+id/tv_user_length"
            style="@style/LineViewBase_Key2" />

    </LinearLayout>

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent"/>

</LinearLayout>