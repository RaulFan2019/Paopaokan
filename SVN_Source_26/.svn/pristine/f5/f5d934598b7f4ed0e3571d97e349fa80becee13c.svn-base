<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/LinearlayoutBase"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarBase"
        app:navigationIcon="@drawable/icon_back"
        app:title="@string/Tv.GroupInfoActivity.key.QRCode"
        app:titleTextColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="284dp"
            android:layout_height="356dp"
            android:layout_marginTop="37dp"
            android:background="@drawable/bg_round_rect_card"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.app.pao.ui.widget.CircularImage
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="27dp"
                    android:background="@drawable/icon_user_photo" />

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_user_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="232dp"
                android:layout_height="232dp" />

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/Tv.PutQRCodeInMiddleOfScreen"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_qrcode_sys"
            android:layout_width="284dp"
            android:layout_height="46dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_round_rect"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon_menu_scan" />

            <com.rey.material.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="@string/Tv.Sys"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>