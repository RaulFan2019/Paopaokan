<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearlayouttitleV1">

    <com.rey.material.widget.ImageButton
        android:id="@+id/title_bar_left_menu"
        style="@style/MenuLeftBackButton" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.rey.material.widget.TabPageIndicator
            android:id="@+id/tbi_history"
            style="@style/HistoryTabPageIndicator"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />

        <com.rey.material.widget.TextView
            android:id="@+id/tv_title_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible">

        <com.rey.material.widget.ImageButton
            android:id="@+id/share"
            style="@style/MenuRightButton"
            android:src="@drawable/icon_share_normal" />

        <com.rey.material.widget.ImageButton
            android:id="@+id/btn_sync"
            style="@style/MenuRightButton"
            android:src="@drawable/icon_history_uploading" />

        <com.rey.material.widget.ImageButton
            android:id="@+id/delete"
            style="@style/MenuRightButton"
            android:src="@drawable/ic_delete" />


    </LinearLayout>


</RelativeLayout>