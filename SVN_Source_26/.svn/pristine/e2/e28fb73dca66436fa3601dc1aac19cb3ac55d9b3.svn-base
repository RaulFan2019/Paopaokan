<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充的颜色 -->
    <solid android:color="#01ffffff" />
    <!-- 设置矩形的四个角为弧形 -->
    <corners
        android:radius="4dp" />
    <gradient
        android:angle="270"
        android:endColor="#01ffffff"
        android:startColor="#01ffffff" />
    <padding
        android:bottom="0.1dp"
        android:left="0.1dp"
        android:right="0.1dp"
        android:top="0.1dp"/>

</shape>