<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:background="@drawable/icon_bg_local_avatar">
        <com.app.pao.ui.widget.CircularImage
            android:id="@+id/civ_user_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13dp"
        android:textSize="16dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:id="@+id/ll_card_type"
        android:layout_width="64dp"
        android:layout_height="19dp"
        android:layout_marginBottom="9dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/icon_bg_card_type"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#ffffff"/>
        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/icon_white_next"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_friend"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_friend_friends_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:text="@string/Tv.LocalUserFragment.My.Friend"/>
            <TextView
                android:id="@+id/tv_friend_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:textColor="#ffffff"
                android:textSize="14dp"/>
        </LinearLayout>
        <View
            style="@style/DividerBase_vertical"
            android:layout_marginBottom="13dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_group"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="13dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_friend_groups_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:text="@string/Tv.LocalUserFragment.My.Group"/>
            <TextView
                android:id="@+id/tv_group_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:textColor="#ffffff"
                android:textSize="14dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>