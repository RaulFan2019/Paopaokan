<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_audio"
    android:layout_width="254dp"
    android:layout_height="35dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="#A5000000"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:visibility="invisible">

    <ImageView
        android:id="@+id/iv_audio_control"
        android:layout_width="26dp"
        android:layout_height="match_parent"
        android:src="@drawable/icon_audio_on" />

    <SeekBar
        android:id="@+id/sb_audio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:max="100"
        android:progressDrawable="@drawable/seekbar_audio"
        android:thumb="@drawable/seekbar_audio_thumb" />

    <TextView
        android:id="@+id/tv_audio_num"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="15dp" />
</LinearLayout>