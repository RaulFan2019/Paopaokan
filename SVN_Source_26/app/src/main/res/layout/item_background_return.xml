<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.rey.material.widget.TextView
            android:id="@+id/tv_background_return_time"
            style="@style/LineViewBase_Key_Tip"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal">

        <com.app.pao.ui.widget.CircularImage
            android:id="@+id/ci_user_avatar"
            android:src="@mipmap/ic_launcher"
            android:layout_width="38dp"
            android:layout_height="38dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="68dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/bg_background_return">

            <com.rey.material.widget.TextView
                android:id="@+id/tv_background_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="15dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>