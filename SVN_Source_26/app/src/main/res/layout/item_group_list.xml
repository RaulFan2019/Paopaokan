<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        style="@style/ListViewItem"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_group_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团名"
                    android:textColor="#222222"
                    android:lines="1"
                    android:ellipsize="end"
                    android:maxLength="15"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:id="@+id/ll_identity"
                    android:layout_width="38dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/bg_round_rect_icon_orange"
                    android:visibility="gone"
                    android:gravity="center">

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团长"
                        android:textColor="@color/white"
                        android:textSize="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="地址"
                    android:textColor="#888888"
                    android:textSize="12dp"/>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="状态"
                    android:textColor="#888888"
                    android:textSize="12dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Tv.GroupList.Member"
                        android:textColor="#888888"
                        android:textSize="12dp"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_member_count"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="12"
                        android:textColor="#222222"
                        android:textSize="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Tv.GroupList.Length"
                        android:textColor="#888888"
                        android:textSize="12dp"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_group_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="123"
                        android:textColor="#222222"
                        android:textSize="12dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow"
            style="@style/LineViewBase_RightArrow"/>
    </LinearLayout>

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent"/>

</LinearLayout>