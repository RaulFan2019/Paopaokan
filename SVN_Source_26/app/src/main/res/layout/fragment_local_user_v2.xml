<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.app.pao.ui.widget.pulltozoomview.PullToZoomScrollViewEx
            android:id="@+id/sv_local_user_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
                android:background="#F06522"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="æˆ‘"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ll_user_set"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="?attr/actionBarItemBackground"
                    android:src="@drawable/icon_eidt" />

                <View
                    style="@style/tvTitleV1"
                    android:layout_weight="1"
                    android:padding="0dp" />

                <ImageButton
                    android:id="@+id/title_my_live"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="?attr/actionBarItemBackground"
                    android:src="@drawable/icon_share_normal" />


                <ImageButton
                    android:id="@+id/title_app_settings"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="?attr/actionBarItemBackground"
                    android:src="@drawable/icon_settings" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>