<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <!-- 闹钟布局 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/ll_user_alarm_num"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/Tv.UserHeader.Total.Remind"
                android:textColor="#3c3b39"
                android:textSize="14dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_user_alarm" />

            <TextView
                android:id="@+id/tv_user_alarm_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="33"
                android:textColor="#888888"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_user_alarm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="还未收到跑步提醒，再多加几个好友把"
                android:textColor="#888888"
                android:textSize="12dp" />
        </LinearLayout>
    </FrameLayout>

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent" />

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp" />
    <!-- 跑步次数 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/ll_total_run_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/Tv.UserCardFront.Total.Count"
                android:textColor="#3c3b39"
                android:textSize="14dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_total_run_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="33"
                android:textColor="#888888"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow" />
        </LinearLayout>
    </FrameLayout>


    <View
        style="@style/DividerBase_card_horizontal"
        android:layout_width="match_parent" />
    <!-- 个人成绩 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tv.UserCardFront.Total.Distance"
                    android:textColor="#3c3b39"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="(公里)"
                    android:textColor="#3c3b39"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="354"
                android:textColor="#222222"
                android:textSize="38dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tv.UserInfoActivity.RunWeek"
                    android:textColor="#3c3b39"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="(公里)"
                    android:textColor="#3c3b39"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_week_average_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="354"
                android:textColor="#222222"
                android:textSize="38dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tv.UserCardFront.Total.Calorie"
                    android:textColor="#3c3b39"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="(大卡)"
                    android:textColor="#3c3b39"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_user_total_calorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="354"
                android:textColor="#222222"
                android:textSize="38dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent" />

    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/ll_my_medal"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/Tv.LocalUserFragment.My.Medal"
            android:textColor="#3c3b39"
            android:textSize="14dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="@string/Tv.LocalUserFragment.Medal.Rule"
            android:textColor="#888888"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_right_arrow" />
    </LinearLayout>
    <View
        style="@style/DividerBase_horizontal"
        android:layout_width="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_obt_medal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_no_medal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_no_medal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/Tv.LocalUserFragment.No.Medal"
                    android:textColor="@color/grey_dark"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/Tv.LocalUserFragment.Go.Run"
                    android:textSize="18dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>