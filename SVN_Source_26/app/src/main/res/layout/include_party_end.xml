<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_party_end"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/icon_party_end"/>

        <View
            android:id="@+id/line_party_end"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.rey.material.widget.TextView
            android:id="@+id/tv_party_end"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center_vertical"
            android:text="@string/Tv.PartyInfo.End"
            android:textColor="#f06522"
            android:textSize="12dp"/>

        <LinearLayout
            android:id="@+id/ll_end_data"
            android:layout_width="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="78dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center_horizontal|bottom">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="20dp"
                        android:background="@drawable/icon_party_plan_big"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_check_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f06522"
                        android:textSize="15dp"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_check_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#222222"
                        android:textSize="10dp"/>
                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_check_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tv.PartyInfo.ChenkTip"
                    android:textColor="#888888"
                    android:textSize="10dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center_horizontal|bottom">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="24dp"
                        android:background="@drawable/icon_party_length_big"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_length_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f06522"
                        android:textSize="15dp"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_length_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#222222"
                        android:textSize="10dp"/>
                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_length_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tv.PartyInfo.LengthTip"
                    android:textColor="#888888"
                    android:textSize="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center_horizontal|bottom">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="15dp"
                        android:background="@drawable/icon_party_time_big"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_pace_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#f06522"
                        android:textSize="15dp"/>

                    <com.rey.material.widget.TextView
                        android:id="@+id/tv_pace_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#222222"
                        android:textSize="10dp"/>
                </LinearLayout>

                <com.rey.material.widget.TextView
                    android:id="@+id/tv_pace_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Tv.PartyInfo.PaceTip"
                    android:textColor="#888888"
                    android:textSize="10dp"/>
            </LinearLayout>

            <ImageView
                style="@style/LineViewBase_RightArrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
    </LinearLayout>

</LinearLayout>
