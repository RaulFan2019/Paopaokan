<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13dp"
        android:background="@drawable/icon_bg_local_avatar"
        android:gravity="center">

        <com.app.pao.ui.widget.CircularImage
            android:id="@+id/civ_user_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="13dp"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/ll_card_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginBottom="9dp"
            android:background="@drawable/icon_bg_card_type"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <View
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/icon_white_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/v_level"
            android:layout_width="144dp"
            android:layout_height="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="9dp"
            android:background="@drawable/progress_bg_user_level">

            <View
                android:id="@+id/v_level_progress"
                android:layout_width="144dp"
                android:layout_height="4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/progress_pro_user_level" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_how_to_next_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="17dp"
            android:textColor="#ffffff"
            android:textSize="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Tv.LocalUserFragment.My.Friend"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_friend_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            style="@style/DividerBase_vertical"
            android:layout_marginBottom="13dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="13dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Tv.LocalUserFragment.My.Group"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_group_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:textColor="#ffffff"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>